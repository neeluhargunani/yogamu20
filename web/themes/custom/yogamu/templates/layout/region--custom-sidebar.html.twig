{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{%
  set classes = [
  'region',
  'region-' ~ region|clean_class,
]
%}

{% set container = region_container|clean_class %}

{% if content %}
  <aside{{ attributes.addClass(classes) }}>
    {% if (region_container) %}
    <div class="{{ container }}">
      {% endif %}
        {% block content %}
          {# Check if the region is "yogamu_dashboardmenu" and add custom styling/markup #}
          {% if region == 'yogamu_dashboardmenu' %}
            <div class="custom-dashboard-menu">
              {{ content }}
            </div>
          {% else %}
            {{ content }}
          {% endif %}
        {% endblock %}
      {% if (region_container) %}
    </div>
    {% endif %}
  </aside>
{% endif %}
